<% if @errors %>
	 <%= render 'layouts/errors' %>
<% end %>

<%= form_tag("/scores", method: "post", id: 'score', class: "form") do %>
	<%  match.team1.order_players.each_with_index do | player, i| %>
	  <%= text_field_tag( "p#{i}".to_s, nil, placeholder: "#{player.name} - #{score_find(player, @week.week, game.game_num)}")%>
		<%= hidden_field_tag 'team_id', player.team.id %>
		<%= hidden_field_tag 'game_id', game.id %>
		<%= hidden_field_tag 'team', 'team1' %>
		<%= hidden_field_tag 'match', match.id %>
  <% end %>
  <%= submit_tag "Save", :class => 'submit' %>
<% end %>			